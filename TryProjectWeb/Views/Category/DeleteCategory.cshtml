@model CategoryDTO


<form asp-action="DeleteCategory">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Category</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="IsActive" class="control-label pt-2" style="font-size:20px;">Is Active</label>
            </div>
            <div class="col-10 pb-3">
                <input type="checkbox" asp-for="IsActive" value="true" checked />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexCategory" asp-controller="Category" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

